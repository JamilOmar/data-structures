{
  "compilerOptions": {
    "moduleResolution": "node",
    "inlineSourceMap": true,
    "target": "es5",
    "module": "commonjs",
    "declaration": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowJs": true,
    "skipLibCheck": true,
    "suppressImplicitAnyIndexErrors": true,
    "inlineSources": true,
    "stripInternal": true,
    "lib": [
      "es2015",
      "es2017",
      "dom"
    ],
    "downlevelIteration": true,
    "outDir": "build"
  },
  "files": [
    "src/index.ts"
  ],
  "compileOnSave": false,
  "buildOnSave": false,
  "exclude": [
    "node_modules",
    "dist",
    "test"
  ]
}
